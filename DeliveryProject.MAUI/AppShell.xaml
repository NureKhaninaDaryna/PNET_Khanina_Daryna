<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeliveryProject.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DeliveryProject.MAUI"
    xmlns:pages="clr-namespace:DeliveryProject.MAUI.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="DeliveryProject.MAUI">

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="register" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login" />
    
    <ShellContent
        Title="Delivery Form"
        ContentTemplate="{DataTemplate pages:DeliveryForm}"
        Route="delivery" />
    
    <ShellContent
        Title="Users"
        ContentTemplate="{DataTemplate pages:UsersPage}"
        Route="users" />
    
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate pages:UserProfilePage}"
        Route="profile" />

</Shell>
